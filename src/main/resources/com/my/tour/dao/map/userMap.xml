<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC './/mybatis.org//DTD Mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='com.my.tour.dao.map.UserMap'>
	<select id='selectUserDto' resultType='userDto'>
		select user_id, user_pw
		from users
		where user_id = #{userId}
	</select>

	<insert id='insertUser'>
		insert into users
		values (#{userId}, #{userPw}, #{email}, #{phoneNum}, #{userName},
				#{birthday}, #{mktgAgreement})
	</insert>

	<select id='selectUserId' resultType='userDto'>
		select user_id
		from users
		where user_name = #{userName} and email = #{email}
	</select>
</mapper>