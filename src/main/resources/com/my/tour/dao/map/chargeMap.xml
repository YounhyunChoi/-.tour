<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC './/mybatis.org//DTD Mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='com.my.tour.dao.map.ChargeMap'>
	<select id='selectCharge' resultType='Charge'>
		select charge_num, charge_price, user_id
		from charges
		where user_id = #{userId}
	</select>

	<insert id='insertCharge'>
		insert into charges
		values(charge_num_seq.nextval, #{chargePrice}, #{userId})
	</insert>
	
	
</mapper>